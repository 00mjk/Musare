{
  "name": "@musare/musare",
  "version": "2.1.1",
  "private": true,
  "description": "A modern, open-source, collaborative music app https://musare.com",
  "author": "Musare Team",
  "license": "GPL-3.0",
  "repository": "https://github.com/Musare/MusareNode",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "npx lerna bootstrap --ci",
    "dev": "npx npm-run-all -p dev:*",
    "dev:frontend": "cd ./frontend && npm dev",
    "dev:backend": "cd ./backend && npm dev"
  },
  "devDependencies": {
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.4",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "husky": {
    "hooks": {
      "pre-commit-disabled": "cd frontend && npm-run-all lint test"
    }
  }
}